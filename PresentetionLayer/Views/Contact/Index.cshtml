@using Edukator.EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">İletişim Bilgileri</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ad Soyad</th>
                    <th scope="col">Konu</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Telefon</th>
                    <th scope="col">Mesaj</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Siteye Git</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <th scope="row">@item.ContactID</th>
                        <td>@item.NameSurname</td>
                        <td>@item.Subject</td>
                        <td>@item.Mail</td>
                        <td>@item.Phone</td>
                        <td>@item.Message</td>
                        <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
                        <td><a href="#" class="btn btn-outline-dark">Siteye Git</a></td>
                    </tr>

                }
            </tbody>
        </table>
        <a href="/Contact/AddContact/" class="btn btn-outline-primary">Yeni İletişim Bilgileri Ekle</a>
    </div>
</div>

