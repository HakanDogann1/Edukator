@model Edukator.EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <form method="post">
            <input type="hidden" asp-for="SocialMediaID"/>
            <div class="mb-3">
                <label for="socialmedianame" class="form-label">Sosyal Medya Başlığı</label>
                <input type="text" class="form-control" id="socialmedianame" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label for="socialmediaicon" class="form-label">Sosyal Medya Başlığı</label>
                <input type="text" class="form-control" id="socialmediaicon" asp-for="Icon" />
            </div>
            <div class="mb-3">
                <label for="socialmediaurl" class="form-label">Sosyal Medya Başlığı</label>
                <input type="text" class="form-control" id="socialmediaurl" asp-for="Url" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>